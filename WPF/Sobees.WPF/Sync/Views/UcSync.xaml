<UserControl x:Class="Sobees.Sync.Views.UcSync"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:Sobees.Sync.Views"
             Background="Pink">
  <Grid>
    <Views:UcMain Visibility="{Binding MainVisibility}" />
    <Views:UcWaiting Visibility="{Binding WaitingVisibility}" />
    <Views:UcConnected Visibility="{Binding ConnectedVisibility}" />
  </Grid>
</UserControl>
