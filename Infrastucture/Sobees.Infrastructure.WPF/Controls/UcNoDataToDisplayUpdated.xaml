<UserControl x:Class="Sobees.Infrastructure.Controls.UcNoDataToDisplayUpdated"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:Sobees.Library.BLocalizeLib;assembly=Sobees.Library.BLocalizeLib">
    <TextBlock Text="{loc:LocText Assembly=Sobees.Configuration.BGlobals, Dict=Resources, Key=txtBlNoDataDisplay}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFCBCBCB" Padding="7,0">
    		<TextBlock.Background>
    			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
    				<GradientStop Color="#FF454545" Offset="0"/>
    				<GradientStop Color="#FF373737" Offset="1"/>
    			</LinearGradientBrush>
    		</TextBlock.Background>
    	</TextBlock>
</UserControl>
